<resources>

    <style name="AppThemeDrawer" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bep_blue</item>
        <item name="colorPrimaryDark">@color/bep_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Customize your theme here.-->
        <item name="colorPrimary">@color/bep_blue</item>
        <item name="colorPrimaryDark">@color/bep_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <!--<item name="android:actionOverflowButtonStyle">@style/filterIcon</item>-->
    </style>

    <style name="MyActionBar2" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background"></item>
    </style>


    <style name="splash" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="filterIcon" parent="Theme.AppCompat.NoActionBar">
        <item name="android:src">@drawable/ic_filter</item>
        <item name="android:title">Filter</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
