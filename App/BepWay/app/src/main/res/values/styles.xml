<resources>

    <!-- Base application theme.-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!--Customize your theme here.-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/test</item>
    </style>
    <style name="AppThemeDrawer" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/test</item>
    </style>
    <style name="test" parent="Theme.AppCompat.NoActionBar">
        <item name="android:src">@drawable/ic_filter</item>
        <item name="android:title">Filter</item>
    </style>

</resources>
